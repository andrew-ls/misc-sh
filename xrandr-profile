# xrandr-profile:
# Sets the XRandR scaling factor based on monitor profiles.

IFS="$(printf ' \t\n!')"; IFS="${IFS%!}"
export LC_ALL='C'

TEMP_DIR='/tmp/xrandr-profile'

unset -v \
	ACTION
unset -v \
	reset_scale \
	scale \
	toggle_scale
while test "${#}" -gt '0'; do
	case "${1}" in
		( '-r' \
		| '--r' \
		| '--re' \
		| '--res' \
		| '--rese' \
		| '--reset' \
		| '--reset-' \
		| '--reset-s' \
		| '--reset-sc' \
		| '--reset-sca' \
		| '--reset-scal' \
		| '--reset-scale' )
			reset_scale='TRUE'
			;;
		( '-s' \
		| '--s' \
		| '--sc' \
		| '--sca' \
		| '--scal' \
		| '--scale' )
			scale='TRUE'
			;;
		( '-t' \
		| '--t' \
		| '--to' \
		| '--tog' \
		| '--togg' \
		| '--toggl' \
		| '--toggle-' \
		| '--toggle-s' \
		| '--toggle-sc' \
		| '--toggle-sca' \
		| '--toggle-scal' \
		| '--toggle-scale' )
			toggle_scale='TRUE'
			;;
	esac
	shift
done
if test "${reset_scale}"; then
	ACTION='reset-scale'
elif test "${scale}"; then
	ACTION='scale'
elif test "${toggle_scale}"; then
	ACTION='toggle-scale'
fi

get_primary_display_id_dev() {(
	IFS="$(printf '\n!')"; IFS="${IFS%!}"

	printf '%s\n' "$(
		for DIR in $(
			find '/sys/devices' -type 'd' \
			| sort
		); do
			if \
				test -f "${DIR}"'/edid' \
				&& test "$(cat "${DIR}"'/enabled')" = 'enabled'
			then
				basename "$(printf '%s\n' "${DIR}")"
			fi
		done
	)" \
	| head -n '1'
)}

get_primary_display_id_xrandr() {(
	xrandr -q \
	| sed -n '
		s/^\([^[:space:]]\{1,\}\)[[:space:]]\{1,\}connected[[:space:]]\{1,\}primary[[:space:]]\{1,\}.*/\1/p;
	' \
	| sort \
	| head -n '1'
)}

get_display_name() {(
	DISPLAY_ID_DEV="${1:?}"
	< "$(
		find '/sys/devices' -type 'd' \
		| grep "${DISPLAY_ID_DEV}"'$' \
		| sort \
		| head -n '1'
	)"'/edid' \
	edid-decode \
	| grep '^Monitor name:' \
	| cut -d ':' -f '2-' \
	| sed '
		s/^[[:space:]]*//;
		s/[[:space:]]$//;
	'
)}

mkdir -p "${TEMP_DIR}"
if test "${XDG_SESSION_TYPE}" = 'x11'; then

	DISPLAY_ID="$(get_primary_display_id_xrandr)"
	DISPLAY_NAME="$(get_display_name "$(get_primary_display_id_dev)")"

	if test "${ACTION}" = 'toggle-scale'; then
		if test -f "${TEMP_DIR}"'/state'; then
			ACTION='reset-scale'
		else
			ACTION='scale'
		fi
	fi

	if test "${ACTION}" = 'reset-scale'; then

		xrandr --output "${DISPLAY_ID}" --scale 1x1
		rm "${TEMP_DIR}"'/state'

	elif test "${ACTION}" = 'scale'; then

		case "${DISPLAY_NAME}" in

			('LG Ultra HD')
				xrandr --output "${DISPLAY_ID}" --scale 1.5x1.5
				gsettings set \
					org.gnome.settings-daemon.plugins.xsettings overrides \
					'[{'\''Gdk/WindowScalingFactor'\'', <2>}]'
				echo 'scaled' > "${TEMP_DIR}"'/state'
				;;

		esac

	fi

fi
